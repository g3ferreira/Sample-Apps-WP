@{int selectedView = Int32.Parse(Model.SelectedView); }
<div class="panel-progress">
    <div class="row">
        <div class="col-xs-12">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                    <div class="glyph">
                        <div @(selectedView >= 1 ? Html.Raw("class='active glyph-icon flaticon-social flex-content'") : Html.Raw("class='glyph-icon flaticon-social flex-content'"))> </div>
                    </div>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                    <div class="glyph">
                        <div @(selectedView >= 2 ? Html.Raw("class='active glyph-icon flaticon-bag flex-content'") : Html.Raw("class='glyph-icon flaticon-bag flex-content'"))></div>
                    </div>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                    <div class="glyph">
                        <div @(selectedView >= 3 ? Html.Raw("class='active glyph-icon flaticon-edit flex-content'") : Html.Raw("class='glyph-icon flaticon-edit flex-content'"))></div>
                    </div>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                    <div class="glyph">
                        <div @(selectedView >= 4 ? Html.Raw("class='active glyph-icon flaticon-correct flex-content'") : Html.Raw("class='glyph-icon flaticon-correct flex-content'"))></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="steps-label">
            <div id="label-step-1" @(selectedView >= 1 ? Html.Raw("class='active col-sm-3 text-center'") : Html.Raw("class='col-sm-3 text-center'"))>
                <h4>Basic Informations</h4>
            </div>
            <div id="label-step-2" @(selectedView >= 2 ? Html.Raw("class='active col-sm-3 text-center'") : Html.Raw("class='col-sm-3 text-center'"))>
                <h4>Products and Services</h4>
            </div>
            <div id="label-step-3" @(selectedView >= 3 ? Html.Raw("class='active col-sm-3 text-center'") : Html.Raw("class='col-sm-3 text-center'"))>
                <h4>Customize</h4>
            </div>
            <div id="label-step-4" @(selectedView >= 4 ? Html.Raw("class='active col-sm-3 text-center'") : Html.Raw("class='col-sm-3 text-center'"))>
                <h4 style="margin-right: 20px;">Resume</h4>
            </div>
        </div>
    </div>
</div>